!!!5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    %title Admin
    = stylesheet_link_tag :all
    = csrf_meta_tag
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/

  %body
    - if flash[:notice]
      %div{:class => 'alert-message warning data-alert'}
        %a{:href => '#', :class => 'close'}='x'
        = flash[:notice]
    
    = yield

    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"
    = javascript_include_tag :all
    = javascript_include_tag "jquery.jeditable.mini.js"
    = javascript_include_tag "bootstrap.js"
    = javascript_include_tag "bootstrap-alerts.js"
